    <main>
       
        <div class="search-container">
          
        </div>

        <div class="job-list" style="display: inline-flex;">
            <!-- Left side - List of jobs -->

            <div class="jobs">
                <ul>
                <% jobs.forEach(function(job) { %>
                    <style>
                        .jobbox {
                          display: grid;
                          grid-template-columns: 100px 400px;
                          grid-gap: 20px;
                        }
                      
                        .job-image .job-details {
                          background-color: #f1f1f1;
                          padding: 20px;
                          text-align: center;
                        }
                      </style>
                      
                      <div class="jobbox">
                          <!-- Content for the first column -->
                          <div class="job-image" >
                            <img src="<%= job.thumbnail %>" alt="" style="width: 50px;">
                          </div>
                        
                          <!-- Content for the second column -->
                            <div class="job-details">
                                <h3>
                                    <a href="/<%= job.job_id %>" style=""><%= job.title %> </a>
                                </h3>
                                <!-- <h3 onclick="showJobDescription(job.job_id)"><%= job.title %></h3> -->
                                <h6><%= job.company_name %></h6>
                                <h6><%= job.location %></h6>
                                <h6><%= job.via %></h6>
                            </div>
                      </div>                    
                <% }) %>
                </ul>
              </div>
        </div>
        
            <!-- Right side - Job description -->
        <div class="job-description" style="display: inline-flex;">
              <h2>Job Description</h2>
              <div id="jobDescription"></div>
            </div>
        </div>
        
          <script>
            // Function to show job description based on selected job
            function showJobDescription(jobId) {
              // Get the job description based on the job ID (from backend or predefined data)
              // Example data for job descriptions
                const desc = jobs['jobId'].description;
                console.log(desc);
              // Display the job description in the designated area
              const jobDescriptionElement = document.getElementById("jobDescription");
              jobDescriptionElement.textContent = desc;
            }
          </script>
               
    </main>
    
