    <style>
       .search-container {
        text-align: center;
        }

        .search-wrapper {
        display: inline-block;
        position: relative;
        }

        .search-bar {
        padding: 10px;
        font-size: 16px;
        border: 1px solid #1672e9;
        border-radius: 4px;
        width: 1000px;
        }

        .search-button {
        position: absolute;
        top: 0;
        right: 0;
        padding: 10px;
        font-size: 16px;
        border: none;
        background-color: #037b0d;
        color: #fff;
        cursor: pointer;
        border-radius: 0 4px 4px 0;
        }

          /* Styles for job list */
    .job-list {
      display: flex;
      justify-content: center;
      align-items: flex-start;
      padding: 20px;
    }

    .job-list .jobs {
      flex: 1;
      background-color: #f2f2f2; /* Background color for the left box */
      border-right: 1px solid #ccc;
      padding: 10px;
    }

    .job-list .jobs ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .job-list .jobs ul {
      margin-bottom: 10px;
      cursor: pointer;
      color: #333;
      background-color: lightblue; /* Background color for each job box */
      border: 1px solid transparent; /* Transparent border for each job box */
      padding: 10px;
      /* display: flexbox; */
    }

    .job-list .jobs ul li:hover {
      border-color: pink; /* Border color on hover */
    }

    /* Styles for job description */
    .job-description {
      flex: 2;
      background-color: #eaeaea; /* Background color for the right box */
      padding: 10px;
    }

    .job-description h2 {
      margin-top: 0;
      color: #333;
    }

    .jobbox {
  background-color: lightgreen;
  border: 2px solid rgba(54, 54, 219, 0.5);
  padding: 10px;
  border-radius: 5px;
}



    </style>
</head>
<body>
